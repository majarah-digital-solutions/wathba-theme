<div x-data="{ show: false }" 
     @mouseenter="show = true" 
     @mouseleave="show = false" 
     class="relative flex items-center">
    
    <!-- العنصر الأساسي (يتم تمرير المحتوى داخل المكون) -->
    <div class="cursor-pointer flex gap-1 items-center py-1 px-[10px] rounded-full border border-[#E5E5E5]">
        <slot></slot>
    </div>

    <!-- Tooltip -->
    <div x-show="show" 
         x-transition 
         class="absolute bottom-full mb-2 px-2 py-1 text-white bg-black text-xs rounded shadow-lg whitespace-nowrap">
        <span x-text="tooltipText"></span>
    </div>
</div>