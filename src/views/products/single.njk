                                            fill="#FFD401" />
                                    </g>
                                    <defs>
                                        <clipPath id="clip0_6090_30129">
                                            <rect width="14.875" height="14" fill="white"
                                                transform="translate(0.9375)" />
                                        </clipPath>
                                    </defs>
                                </svg>

                                {%endfor%}
                            </div>
                            <div class="py-1 flex ">
                                <div class=" text-customBlack">
                                    {%if(context.product.rateCount == 0)%}
                                    لا يوجد تقييمات
                                    {%else%}
                                    {{context.product.rateCount}}
                                    تقييما
                                    {%endif%}
                                </div>
                            </div>
                        </div>
                        {% set statusAvailable = context.product.status == "AVAILABLE" %}
                        <div
                            class="{% if statusAvailable %} text-mainColor {% else %}text-red-500{% endif %} font-bold text-sm flex gap-2 items-center">
                            <svg width="15" height="16" viewBox="0 0 15 16" fill="none"
                                xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" clip-rule="evenodd"
                                    d="M4.95216 1.84907C5.57029 1.1382 6.48249 0.6875 7.5 0.6875C8.51746 0.6875 9.42962 1.13815 10.0477 1.84896C10.9876 1.7833 11.9514 2.10962 12.671 2.82918C13.3905 3.54874 13.7169 4.51257 13.6512 5.45239C14.3619 6.07052 14.8125 6.98261 14.8125 8C14.8125 9.01758 14.3617 9.92983 13.6508 10.548C13.7163 11.4876 13.39 12.4513 12.6705 13.1707C11.9511 13.8901 10.9875 14.2165 10.0478 14.151C9.42969 14.8618 8.5175 15.3125 7.5 15.3125C6.48255 15.3125 5.5704 14.8619 4.95228 14.1511C4.01244 14.2167 3.0486 13.8904 2.32903 13.1708C1.60947 12.4513 1.28314 11.4874 1.34881 10.5476C0.638089 9.92949 0.1875 9.01739 0.1875 8C0.1875 6.98256 0.638135 6.07042 1.34892 5.45229C1.28332 4.51254 1.60965 3.5488 2.32915 2.8293C3.04866 2.1098 4.0124 1.78347 4.95216 1.84907ZM10.2077 6.63945C10.3883 6.38665 10.3297 6.03534 10.0769 5.85477C9.82415 5.67421 9.47284 5.73276 9.29227 5.98555L6.86572 9.38273L5.64775 8.16475C5.42808 7.94508 5.07192 7.94508 4.85225 8.16475C4.63258 8.38442 4.63258 8.74058 4.85225 8.96025L6.53975 10.6477C6.65667 10.7647 6.81911 10.8242 6.9839 10.8106C7.14868 10.7969 7.29912 10.7115 7.39523 10.5769L10.2077 6.63945Z"
                                    fill="{% if statusAvailable %}{{global.app.settings.mainColor}}{% else %} red {% endif %}" />
                            </svg>
                            <div>
                                {% if statusAvailable %}
                                متوفر في المعرض
                                {% else %}
                                غير متوفر
                                {% endif %}
                            </div>
                        </div>


                    </div>
                    <div class="pt-6 border-t flex flex-col gap-4" style="border-color: #D9D9D9;">
                        <div class=" flex gap-2 items-end">
                            {%if context.product.discount !=0%}
                            <div class="  font-bold text-mainColor text-2xl">
                                {{context.product.priceAfterDiscount | money}}
                            </div>
                            <div class="line-through" style="color: #AEAEAE;">
                                {{context.product.price |money }}
                            </div>
                            {%else%}
                            <div class="  font-bold text-mainColor  text-2xl">
                                {{context.product.price | money}}
                            </div>
                            {%endif%}
                        </div>
                        <div class="text-sm text-subColor">
                            {{ context.product.content | safe }}
                        </div>
                    </div>
                    {%  if context.product.properties.length > 0%}
                    <div class="pt-6 border-t w-full font-bold  flex flex-col gap-2 items-center text-customBlack" style="border-color: #D9D9D9">
                        <qumra-product-options class="w-full" main-color="{{global.app.settings.mainColor}}"
                            product={{context.product._id}}
                            data="{{context.product.properties | dump}}"></qumra-product-options>
                </div>

                    {%endif%}

                    <div
                        class="pt-6  border-t font-bold flex border-[#D9D9D9  justify-between flex-row  items-center  gap-4">

                        <div class=" flex gap-3 w-max">
                            <button type="submit" style="min-height: 50px;min-width: 210px;"
                                class="cursor-pointer min-w-max rounded-lg  w-full gap-2 bg-mainColor text-white p-3 flex-1 font-semibold flex items-center justify-center">
                                <svg width="17" height="16" viewBox="0 0 17 16" fill="none"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <path
                                        d="M1.2998 1.40005C1.2998 1.06868 1.56843 0.800049 1.8998 0.800049H3.20258C3.90186 0.800049 4.4939 1.31604 4.58944 2.00876L4.64344 2.40024C8.30709 2.41015 11.8823 2.79903 15.3316 3.52994C15.6514 3.5977 15.8581 3.90895 15.7965 4.22997C15.4714 5.92443 15.0372 7.58016 14.5014 9.18955C14.4198 9.43468 14.1905 9.60005 13.9321 9.60005H5.29981C5.20834 9.60005 5.11861 9.60615 5.03095 9.61789C4.32816 9.71205 3.74054 10.1723 3.46617 10.8H14.2998C14.6312 10.8 14.8998 11.0687 14.8998 11.4C14.8998 11.7314 14.6312 12 14.2998 12H2.70739C2.54035 12 2.38087 11.9304 2.26732 11.8079C2.15378 11.6854 2.09644 11.5211 2.10911 11.3545C2.20833 10.0503 3.08801 8.96554 4.28243 8.5653L3.4007 2.17272C3.38705 2.07376 3.30247 2.00005 3.20258 2.00005H1.8998C1.56843 2.00005 1.2998 1.73142 1.2998 1.40005Z"
                                        fill="white" />
                                    <path
                                        d="M5.2998 14C5.2998 14.6628 4.76255 15.2 4.0998 15.2C3.43706 15.2 2.8998 14.6628 2.8998 14C2.8998 13.3373 3.43706 12.8 4.0998 12.8C4.76255 12.8 5.2998 13.3373 5.2998 14Z"
                                        fill="white" />
                                    <path
                                        d="M12.8998 15.2C13.5625 15.2 14.0998 14.6628 14.0998 14C14.0998 13.3373 13.5625 12.8 12.8998 12.8C12.2371 12.8 11.6998 13.3373 11.6998 14C11.6998 14.6628 12.2371 15.2 12.8998 15.2Z"
                                        fill="white" />
                                </svg>
                                اضافة للسلة
                            </button>
                            {# <div style="width: 50px;border-radius: 4px;"
                                class=" w-[50px] border  border-[#D9D9D9] h-[50px] flex justify-center items-center">
                                <svg width="18" height="16" viewBox="0 0 18 16" fill="none"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" clip-rule="evenodd"
                                        d="M1.80441 2.08653C2.59203 1.29915 3.66012 0.856828 4.77381 0.856828C5.8875 0.856828 6.95559 1.29915 7.74321 2.08653L8.97381 3.31608L10.2044 2.08653C10.5918 1.68539 11.0553 1.36542 11.5677 1.14531C12.0801 0.925188 12.6312 0.809326 13.1889 0.80448C13.7466 0.799634 14.2997 0.905901 14.8158 1.11708C15.332 1.32826 15.8009 1.64012 16.1953 2.03447C16.5896 2.42882 16.9015 2.89776 17.1127 3.41392C17.3238 3.93009 17.4301 4.48314 17.4253 5.04082C17.4204 5.59849 17.3046 6.14961 17.0844 6.66203C16.8643 7.17445 16.5443 7.63789 16.1432 8.02533L8.97381 15.1958L1.80441 8.02533C1.01703 7.23772 0.574707 6.16962 0.574707 5.05593C0.574707 3.94224 1.01703 2.87415 1.80441 2.08653Z"
                                        fill='{{global.app.settings.mainColor}}' />
                                </svg>
                            </div> #}
                        </div>

                        <div class=" flex flex-col  md:flex-row gap-2">
                            <qumra-quantity-input value=1></qumra-quantity-input>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class=" flex flex-col gap-6 ">
        <div class="flex justify-between">
            <h2 class=" font-bold text-2xl text-customBlack">منتجات مشابهة</h2>
            <a href="" class=" font-bold text-md text-mainColor">عرض المزيد</a>
        </div>
        <div class="relative w-full">
            <qumra-slider-multi navigation-color={{global.app.settings.mainColor}} slides-per-view="5"
                spaceBetween="10">

                {%for item in context.relatedProducts.results%}
                <qumra-slider-item>
                    <qumra-product-card product='{{item | dump}}'></qumra-product-card>
                </qumra-slider-item>
                {%endfor%}
            </qumra-slider-multi>


        </div>

    </div>



</div>

{% endblock %}