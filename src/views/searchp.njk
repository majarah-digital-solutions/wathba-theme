{% extends "layouts/layout.njk" %}
{% from "common/components/swipper/index.njk" import Homeswipper,ProductCardswipper,opinionsswipper %}
{% from "common/components/headers/index.njk" import titleSection %}
{% from "common/components/cards/index.njk" import cardSection1,cardOptions %}
{% from "common/components/operations/index.njk" import showMore ,navogationLink%}

{% block content %}
<div class="bg-mainColor pb-10">
    <div class="flex justify-center ">
        <div class="md:w-10/12 w-11/12">
            <div class="my-20">
                {{navogationLink(firstText="الرئيسية",firstLink="/",secondText=page.title,secondLink="#")}}
            </div>
            <div class=" my-10 relative">
                <img class="w-full" src={{"images/pages.webp" | assets}} alt="صورة الرئيسية" loading="lazy">
            </div>
            <div class=" grid md:grid-cols-3  grid-cols-2 gap-3">

                {% for product in context.products %}
                    {{cardSection1(category=product.title,image=product.images[0].imageUrl, price=product.price, discount="67", priceBeforeDiscount="67", rating=5)}}
                {% endfor %}
     
            </div>
        </div>
    </div>
</div>
{% endblock %}


